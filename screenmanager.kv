<MainScreenManager>:

    CadastroMembro:
    Login:
    EBD:
    Dashboard:

<CadastroMembro>:
    name: "cad_membro"
    MDFloatLayout:
        orientation:"vertical"
        md_bg_color: 0/255, 0/255, 60/255, 1
        padding:10
        MDTopAppBar:
            id: appbar
            title:"CAAD"
            elevation: 4
            pos_hint:{"center_y":.95}
            left_action_items: [["menu"]]
        MDBoxLayout:
            md_bg_color: 0/255, 0/255, 150/255, 1
            size_hint_y:.07
            size_hint_x:1
            pos_hint:{"center_x":.5,"center_y":.87}
            padding:20
            orientation:"horizontal"
            MDLabel:
                text:"Cadastro de Membro"
                #adaptive_size:True
                halign:"center"
                font_size:30

        MDFloatLayout:
            md_bg_color: 0/255, 0/255, 150/255, 1
            size_hint_y:.75
            size_hint_x:.9
            pos_hint:{"center_x":.5,"center_y":.45}
            padding:20
            orientation:"vertical"

            MDTextField:
                id: nome
                hint_text:"Nome Completo:"
                size_hint_x:.9
                pos_hint:{"center_x":.5, "center_y":.9}
            MDTextField:
                id: cpf
                hint_text:"CPF:"
                size_hint_x:.9
                pos_hint:{"center_x":.5, "center_y":.8}

            MDTextField:
                id: data_nasc
                hint_text:"Data de Nascimento"
                size_hint_x:.9
                pos_hint:{"center_x":.5, "center_y":.7}
                on_focus: root.showDatePicker()

            MDTextField:
                id: data_membro
                hint_text:"Membro desde:"
                size_hint_x:.9
                pos_hint:{"center_x":.5, "center_y":.6}
                on_focus: root.showDatePickerSince()

            MDTextField:
                id: endereco
                hint_text:"Endereço:"
                size_hint_x:.9
                pos_hint:{"center_x":.5, "center_y":.5}

            MDTextField:
                id: congregacao
                hint_text:"Congregaçao:"
                size_hint_x:.9
                pos_hint:{"center_x":.5, "center_y":.4}

            MDTextField:
                id: departamento
                hint_text:"Departamento:"
                size_hint_x:.9
                pos_hint:{"center_x":.5, "center_y":.3}

            MDTextField:
                id: cargo
                hint_text:"Cargo:"
                size_hint_x:.9
                pos_hint:{"center_x":.5, "center_y":.2}

            MDRaisedButton:
                text:"Cancelar"
                pos_hint:{"center_x":.15, "center_y":.07}
                on_release:

            MDRaisedButton:
                text:"Salvar"
                pos_hint:{"center_x":.86, "center_y":.07}
                on_release: root.cadastrar_membro(nome.text,cpf.text,data_nasc.text,data_membro.text,endereco.text,congregacao.text,departamento.text,cargo.text)







<EBD>:
    name:"ebd"
    MDBoxLayout:
        orientation:"vertical"
        pos_hint:{"top":1}
        md_bg_color: 0/255, 0/255, 60/255, 1
        MDTopAppBar:
            id: appbar
            title:"CAAD"
            elevation: 4
            pos_hint:{"center_y":.95}
            left_action_items: [["menu", lambda x: app.callback()]]
        ScrollView:
            orientation:"vertical"
            do_scroll_x: False
            do_scroll_y: True
            pos_hint:{"center_y": .6}
            size_hint:(1,1)
            MDGridLayout:
                size_hint_y:.75
                cols:2
                padding:[dp(15),dp(15),dp(15),dp(35)]
                spacing:dp(15)

                ElementCard:
                    image:"imagens/eugenic_logo.png"
                    text:"Turmas"

                ElementCard:
                    image:"imagens/eugenic_logo.png"
                    text:"Relatorios"

                ElementCard:
                    image:"imagens/eugenic_logo.png"
                    text:"Cadastro de Aluno"

<Dashboard>:
    name: "dashboard"
    MDBoxLayout:
        orientation:"vertical"
        pos_hint:{"top":1}
        md_bg_color: 0/255, 0/255, 60/255, 1
        MDTopAppBar:
            id: appbar
            title:"CAAD"
            elevation: 4
            pos_hint:{"center_y":.95}
            left_action_items: [["menu", lambda x: app.callback()]]
        ScrollView:
            orientation:"vertical"
            do_scroll_x: False
            do_scroll_y: True
            pos_hint:{"center_y": .6}
            size_hint:(1,1)
            MDGridLayout:
                size_hint_y:.75
                cols:2
                padding:[dp(15),dp(15),dp(15),dp(35)]
                spacing:dp(15)

                ElementCard:
                    image:"imagens/eugenic_logo.png"
                    text:"EBD"

                ElementCard:
                    image:"imagens/eugenic_logo.png"
                    text:"Departamentos"

                ElementCard:
                    image:"imagens/eugenic_logo.png"
                    text:"Açao Social"

                ElementCard:
                    image:"imagens/eugenic_logo.png"
                    text:"Agenda de Eventos"

                ElementCard:
                    image:"imagens/eugenic_logo.png"
                    text:"Escalas"
                ElementCard:
                    image:"imagens/eugenic_logo.png"
                    text:"Cadastro de Membro"




<ElementCard@MDCard>:
    md_bg_color: 150/255, 155/255, 150/255, 0.2
    padding:dp(10)
    spacing:dp(10)
    radius:dp(25)
    ripple_behavior: True
    image:''
    text:""
    items_count:""
    subtext:''

    orientation:'vertical'
    Image:
        source:root.image
    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            halign:"center"
            text:root.text
            font_size: "15sp"
            #font_name: "Poppins-Medium.ttf"
        MDLabel:
            halign:"center"
            font_style:"Caption"
            text:root.subtext
        MDLabel:
            halign:"center"
            text:root.items_count



<Login>:
    name:"login"
    MDFloatLayout:
        orientation: "vertical"
        padding:30
        #spacing:20
        size_hint_x:1
        size_hint_y:1

        #pos_hint:{"center_x":.5, "center_y":.5}
        #adaptive_height: True
        #adaptive_width: True
        #adaptive_size: True
        #md_bg_color: 200/255, 200/255, 200/255, 1
        FitImage:
            source: "imagens/fundo_login.jpg"
            size_hint_y: 1
            pos_hint: {"top": 1}

        MDCard:
            md_bg_color: 230/255, 240/255, 240/255, 0.4
            pos_hint:{"center_x":.5, "center_y":.5}
            radio:36
            size_hint_x: .8
            size_hint_y:.5
            padding:20
            orientation:"vertical"


            MDLabel:
                text:"Login"
                #adaptive_size:True
                font_size:30
                halign:"center"
                #pos_hint:{"center_x":.5, "center_y":.8}
            MDTextField:
                id: usuario
                hint_text: "Usuario"
                size_hint_x: .7
                pos_hint:{"center_x":.5, "center_y":.7}


            MDTextField:
                id: senha
                hint_text:"Senha"
                size_hint_x: .7
                pos_hint:{"center_x":.5, "center_y": .6}

            MDRaisedButton:
                text:"Entrar"
                pos_hint:{"center_x":.5, "center_y": .2}
